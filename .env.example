# Grok4Git Environment Configuration
# Copy this file to .env and fill in your actual values

# Required: xAI API Key for Grok AI model
# Get yours from: https://console.x.ai/
XAI_API_KEY=your_xai_api_key_here

# Required: GitHub Personal Access Token
# Create one at: https://github.com/settings/tokens
# Needs repo access permissions
GITHUB_TOKEN=your_github_token_here

# Required: Your GitHub username
GITHUB_USERNAME=your_github_username_here

# Optional: AI model name (default: grok-4-0709)
MODEL_NAME=grok-4-0709

# Optional: xAI API base URL (default: https://api.x.ai/v1)
XAI_BASE_URL=https://api.x.ai/v1

# Optional: GitHub API base URL (default: https://api.github.com)
GITHUB_API_BASE_URL=https://api.github.com

# Optional: Log level (default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: Maximum file size in MB for processing (default: 1)
MAX_FILE_SIZE_MB=1

# Optional: API timeout in seconds (default: 30)
API_TIMEOUT=30

# Optional: GitHub API version (default: 2022-11-28)
GITHUB_API_VERSION=2022-11-28
